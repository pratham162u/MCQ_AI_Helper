{
  "manifest_version": 3,
  "name": "MCQ AI Helper",
  "version": "1.0",
  "description": "Get instant AI answers for MCQs",
  "permissions": ["contextMenus", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
